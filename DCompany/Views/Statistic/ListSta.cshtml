<div class="container content-panel">
      <div class="row">
        <div class="span12">
            <div class="form-horizontal ">
                <div class="row">
                    <div class="span9">
                       <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto;padding:20px"></div>
                        </div>
             
                    <div class="span9">
                         <div id="container2" style="min-width: 310px; height: 400px; margin: 0 auto;padding:20px"></div>
                        </div>
                     
                    </div>
                <div class="row">
                         <div class="span9">
                
                        <div id="container3" style="min-width: 310px; height: 400px; margin: 0 auto;padding:20px"></div>
                        </div>
            </div>
          </div>
</div>
    </div>
    </div>
<script type="text/javascript">

    $(function () {
        var NoOrder = JSON.parse("[" + "@ViewBag.OrderNO" + "]");
        var PriceOrder = JSON.parse("[" + "@ViewBag.PriceOrder" + "]");
        var Payment = JSON.parse("[" + "@ViewBag.Payment" + "]");
        var Store = JSON.parse("[" + "@ViewBag.Store" + "]");
        $('#container').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: 'Số đơn hàng từng tháng'
            },
            subtitle: {
                text: 'Source: tanhoangdang.com'
            },
            xAxis: {
                categories: [
                    'Jan',
                    'Feb',
                    'Mar',
                    'Apr',
                    'May',
                    'Jun',
                    'Jul',
                    'Aug',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dec'
                ]
            },
            yAxis: {
                min: 0,
                title: {

                    text: 'Số đơn hàng'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.f} </b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [{
               name:'Số đơn hàng',
                data: NoOrder
    
            }]
        });
        $('#container2').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: 'Tiền hàng và tiền trả theo tháng'
            },
            subtitle: {
                text: 'Source: tanhoangdang.com'
            },
            xAxis: {
                categories: [
                    'Jan',
                    'Feb',
                    'Mar',
                    'Apr',
                    'May',
                    'Jun',
                    'Jul',
                    'Aug',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dec'
                ]
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'VNĐ'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.f} đ</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [{
                    name: 'Trị giá đơn hàng',
                    data: PriceOrder
                }, {
                    name: 'Số tiền thanh toán',
                    data: Payment
            }]
        });
        $('#container3').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: 'Trị giá nhập kho từng tháng'
            },
            subtitle: {
                text: 'Source: tanhoangdang.com'
            },
            xAxis: {
                categories: [
                    'Jan',
                    'Feb',
                    'Mar',
                    'Apr',
                    'May',
                    'Jun',
                    'Jul',
                    'Aug',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dec'
                ]
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'VNĐ'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.f} đ</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [{
                name: 'Trị giá nhập kho',
                data: Store
            }],
        });
       
    });
    

		</script>
 

